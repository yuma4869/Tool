provide(:github,'https://github.com/yuma4869/Tool') %>



    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #ffffff;
            background: #1a1b2e;
            overflow-x: hidden;
        }

        .geometric-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.3;
        }

        .geometric-shape {
            position: absolute;
            border: 2px solid rgba(255, 116, 177, 0.2);
            animation: float 20s infinite linear;
        }

        .shape1 {
            width: 100px;
            height: 100px;
            transform: rotate(45deg);
            top: 10%;
            left: 10%;
            border-color: rgba(255, 116, 177, 0.2);
        }

        .shape2 {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            top: 40%;
            right: 15%;
            border-color: rgba(116, 255, 236, 0.2);
        }

        .shape3 {
            width: 80px;
            height: 80px;
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
            bottom: 20%;
            left: 20%;
            border-color: rgba(255, 214, 116, 0.2);
        }

        @keyframes float {
            0% { transform: translate(0, 0) rotate(0deg); }
            50% { transform: translate(30px, 30px) rotate(180deg); }
            100% { transform: translate(0, 0) rotate(360deg); }
        }

        .intro-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: #1a1b2e;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            animation: fadeOut 1s ease 4s forwards;
        }

        .intro-text {
            font-size: 5rem;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1rem;
            position: relative;
            animation: glitch 3s linear;
            background: linear-gradient(45deg, #ff74b1, #74ffec);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        @keyframes fadeOut {
            to {
                opacity: 0;
                visibility: hidden;
            }
        }

        @keyframes glitch {
            0% { transform: translate(0); }
            20% { transform: translate(-2px, 2px); }
            40% { transform: translate(-2px, -2px); }
            60% { transform: translate(2px, 2px); }
            80% { transform: translate(2px, -2px); }
            100% { transform: translate(0); }
        }

        .main-content {
            opacity: 0;
            animation: fadeIn 1s ease 4.5s forwards;
        }

        .section {
            opacity: 0;
            transform: translateY(50px);
            transition: all 1s ease;
        }

        .section.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .hero {
            height: 100vh;
            background: linear-gradient(135deg, #1a1b2e, #2a2b4e);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .profile-container {
            text-align: center;
            z-index: 1;
        }

        .profile-img {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            border: 3px solid #ff74b1;
            box-shadow: 0 0 30px rgba(255, 116, 177, 0.3);
            margin-bottom: 2rem;
        }

        .name-title h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, #ff74b1, #74ffec);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .name-title p {
            font-size: 1.2rem;
            color: #74ffec;
        }

        .skills {
            padding: 6rem 2rem;
            background: rgba(26, 27, 46, 0.8);
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #ff74b1, #74ffec);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .skill-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .skill-card {
            background: rgba(255, 255, 255, 0.05);
            padding: 2rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 116, 177, 0.2);
            transition: all 0.3s ease;
        }

        .skill-card:hover {
            transform: translateY(-10px);
            border-color: #ff74b1;
            box-shadow: 0 10px 30px rgba(255, 116, 177, 0.2);
        }

        .projects {
            padding: 6rem 2rem;
            background: rgba(26, 27, 46, 0.9);
        }

        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .project-card {
            position: relative;
            height: 300px;
            border-radius: 15px;
            overflow: hidden;
            cursor: pointer;
        }

        .project-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .project-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(26, 27, 46, 0.9));
            padding: 2rem;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }

        .project-card:hover .project-overlay {
            transform: translateY(0);
        }

        .project-card:hover img {
            transform: scale(1.1);
        }

        .timeline {
            padding: 6rem 2rem;
            background: rgba(26, 27, 46, 0.8);
        }

        .timeline-item {
            max-width: 800px;
            margin: 0 auto 3rem;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            border-left: 4px solid #ff74b1;
            backdrop-filter: blur(10px);
        }

        .timeline-item h3 {
            color: #74ffec;
            margin-bottom: 1rem;
        }

        .contact {
            padding: 6rem 2rem;
            text-align: center;
            background: rgba(26, 27, 46, 0.9);
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 2rem;
        }

        .social-link {
            width: 60px;
            height: 60px;
            border: 2px solid #ff74b1;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ff74b1;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 1.5rem;
        }

        .social-link:hover {
            background: #ff74b1;
            color: #1a1b2e;
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(255, 116, 177, 0.4);
        }

        @media (max-width: 768px) {
            .intro-text {
                font-size: 3rem;
            }
            
            .name-title h1 {
                font-size: 2.5rem;
            }

            .section-title {
                font-size: 2rem;
            }
        }
    </style>
